<link rel="stylesheet" href="css/Emergency.css">

@model Customer

<div class="container">
    <h1> Customer Contact Information</h1>
    <form method="post">
        <div class="form-group">
            <label for="uname">User Name</label>
            <input type="text" asp-for="@Model.FullName" placeholder="Your name..">
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" asp-for="@Model.Address" placeholder="Your address..">
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" asp-for="@Model.Email" placeholder="Your email..">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="address">Phone</label>
            <input type="number" asp-for="@Model.Phone" placeholder="Your phone number..">
            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
        </div>
        <input type="submit" value="Submit">
    </form>
</div>
